.main-login.col-sm-4.col-sm-offset-4
  .logo
    ZenoRadio
  .box-login
    %h3 Create your new password
    = render "shared/flash_message"
    %div.row
      %div.col-md-12
        #authentication-form
          = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
            = devise_error_messages!
            %fieldset
              .form-group
                %span.input-icon
                  = f.hidden_field :reset_password_token
                  = f.input :password, label: "New password", input_html: { class: 'authentication-input form-control', :autofocus => true}, label_html: { class: 'authentication-label'}
              .form-group
                %span.input-icon
                  = f.input :password_confirmation, label: "Confirm new password", input_html: { class: 'authentication-input form-control'}, label_html: { class: 'authentication-label'}
            .submit-control
              = f.submit "Change my password", class: "submit-btn btn btn-primary"
          %br
          = render "devise/shared/links"
